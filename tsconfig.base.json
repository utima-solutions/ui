{
  "compilerOptions": {
    // Compiler features
    "jsx": "react-jsx", // support JSX
    "allowJs": true, // allow importing `.js` from `.ts`
    "resolveJsonModule": true,
    "noEmit": true,
    "declaration": false,
    "declarationMap": false,

    // More efficient builds + references support
    "composite": false,
    "incremental": true,

    // Enable latest ES Features
    "useDefineForClassFields": true,

    // Backwards compatibility
    "esModuleInterop": true,
    "isolatedModules": true,

    // Best practices
    "moduleDetection": "force",
    "skipLibCheck": true,
    "verbatimModuleSyntax": true, // Force the use of type

    // Type checking flags
    "strict": true, // enables all strict rules
    "noFallthroughCasesInSwitch": true,
    "useUnknownInCatchVariables": true,
  },
}
